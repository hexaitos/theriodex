<%= partial :lang_select, id: id, lang: lang %>

<h1>Game Results</h1>
<div class="print">
<button class="print" onClick="window.print()">Print your results</button>

<p><%= get_localised_text(lang, :correct_guesses) %>: <%= points %> / <%= guesses %> • <%= get_localised_text(lang, :skipped) %>: <%= skips %> • Difficulty: <%= session[:difficulty].capitalize %> </p>

<h2>Guessed Pokémon</h2>
<div class="game-results">
	<% session[:results].each do | id, data | %>
		<div class="guess-results">
			<% if data[:skipped] %>
			<% else %>

			<img src="/sprites/pokemon/<%= id %>.png"/>
				<p>Your guess: <u><%= data[:guess] %></u></p>
				<p>The Pokémon was: <u><%= data[:name] %></u></p>
				<% if data[:correct] %>
					<p>You were correct</p>
				<% else %>
					<p>You were wrong</p>
				<% end %>
			<% end %>
		</div class="guess">
	<% end %>
</div>

<h2>Skipped Pokémon</h2>
<div class="game-results">
	<% session[:results].each do | id, data | %>
		<div class="guess-results">
			<% if data[:skipped] %>
				<img src="/sprites/pokemon/<%= id %>.png"/>
				<p>You skipped this Pokémon</p>
			<% end %>
		</div class="guess">
	<% end %>
</div>
</div>