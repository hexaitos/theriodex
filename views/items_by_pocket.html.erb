<%= partial :lang_select %>

<h1>Items in <%= pocket_name %></h1>

<div class="pokemom-list-container">
	<div class="item-list">
		<% items.each do | item_id, name, effect, short_effect, flavour_text, versions, sprite, cost | %>
			<% if !sprite.nil? then img = JSON.parse(sprite)["default"]&.gsub("https://raw.githubusercontent.com/PokeAPI/sprites/master", "") end %>
			<div class="item search">
				<div class="id-container">
					<% item_id.to_s.chars.map(&:to_i).each do | num | %>
						<span><%= num %></span>
					<% end %>
				</div>
				<div class="price-container">
					<span>â‚½</span>
					<% cost.to_s.chars.map(&:to_i).each do | num | %>
						<span><%= num %></span>
					<% end %>
				</div>
				<div class="item-container">
					<p><%= name %></p>
					<br>
					<img src="<%= img %>">
					<br>
					<hr>
					<div class="item-text">
						<span><%= effect %></span>
						<br>
						<hr>
						<span><%= flavour_text %></span>
						<hr>
						<span class="versions">
							<%= format_versions(versions) %>
						</span>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
