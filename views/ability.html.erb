<%= partial :lang_select %>

<h1><%= ability_name %></h1>
<p class="ability"><%= ability_information %></p>
<br>
<hr>

<h2><%= get_localised_text(lang, :pokemon_with_this_ability) %></h2>

<div class="pokemom-list-container">
	<div class="pokemon-list">
		<% pokemon_with_ability.each do | id, info | %>
			<div class="pokemon search">
				<% info[:types].each do |id, name| %>
					<a style="text-decoration: none;" href="/show/pokemon/type/<%= id %>">
						<img style="width: 64px; vertical-align: middle;" src="/sprites/types/generation-ix/scarlet-violet/Tera/<%= id %>.png" alt="Pok√©mon type <%= name %>">
					</a>
				<% end %>
				<br>
				<a href="/show/<%= id %>?lang=<%= lang %>"><img loading="lazy" src="<%= info[:sprite] %>"><br><%= info[:name] %><br></a>
				<a class="test" href="/show/pokemon/gen/<%= info[:gen][1] %>"><%= info[:gen][0] %></a>
				<br>
			</div>
		<% end %>
	</div>
</div>
